{
  "name": "@bittrd/siccly",
  "version": "0.0.4",
  "description": "(S)imple (I)nversion of (C)ontrol (C)ontainer (ly)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "ci:test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "watch": "jest --watchAll",
    "build": "tsc --noEmit false",
    "prepack": "rm -f tsconfig.tsbuildinfo && rm -rf lib && npm run build",
    "release": "semantic-release"
  },
  "files": [
    "lib/"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "coveralls": "^3.0.3",
    "jest": "^24.8.0",
    "semantic-release": "^15.13.12",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bittrd/siccly.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
